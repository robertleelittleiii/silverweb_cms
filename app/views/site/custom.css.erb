// tiny mce body override
html body#tinymce{
    background-color: white;
}

html body#tinymce li.selector {
    display: inline-block !important;
    height: 50px;
    color: white;
    width: 100%;
    height: 50px;
    background: red;
    font-size: 35px;
    text-align: center;
}

html body#tinymce p.selector {
    display: block !important;
    height: 59px;
    text-align: center;
    width: 100%;
    background-color: red;
    color: white;
    font-size: 40px;
}

html body#tinymce p.selector:after {
    content:"SELECTOR";
}

