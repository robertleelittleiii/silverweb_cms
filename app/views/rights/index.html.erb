          <%=image_tag "ajax-loader2.gif", :id=>"loader_progress" ,:style=>"display:none"%>
        <% end %> <br>
        <div id="right-actions">
            <%= link_to('New Right',{ :action=>:create_empty_record, :controller=>:rights, :format=>"json", :typeofrecord=>"right", :request_type=>"window"}, :id=>"new-right",:class=>"button-link", :remote => true  )%>
        </div>

        <table width="100%" cellpadding="0" cellspacing="0" border="0" class="display" id="right-table">
            <thead>
                <tr>
                    <th >ID</th>
