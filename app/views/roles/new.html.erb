<div class="depot-form">

<% form_for(@role) do |f| %>
  <%= f.error_messages %>

  <fieldset>
  <legend>Enter role Details</legend>

  <div>
    <%= f.label :name %>:
    <%= f.text_field :name, :size => 40 %>
  </div>

  <div>
    <%= f.submit "Add role", :class => "submit" %>
  </div>

  </fieldset>
<% end %>

</div>
